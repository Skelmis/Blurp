{% extends "base.jinja" %}

{% block content %}
<div class="page page-center">
      <div class="container py-4">
      {% include 'alerts.jinja' %}
        <div class="card card-md">
        {{ title }}
          <div class="card-body">
        <section>
        <ul>
            {% for request in requests %}
                <li><a href="/b/requests/{% if  authed %}authed/{% endif %}{{ request.uuid }}"> {{ request.type }}
                    {% if hide_urls %}- {{ request.made_at.strftime("%-I:%M:%S %p, %d-%m-%Y %Z") }}{% else %}{{ request.url }}{% if show_query_params %}{% if request.query_params %}?{{ request.query_params }}{% endif %}{% endif %}{% endif %} </a></li>
            {% endfor %}
        </ul>
        </section>
        <i>All requests sent to this site are logged here.</i>
    </div>
{% endblock content %}
